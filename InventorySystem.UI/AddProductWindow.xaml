<Window x:Class="InventorySystem.UI.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="650" Width="600" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" CornerRadius="10" BorderBrush="#E2E8F0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" Opacity="0.15" ShadowDepth="5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="{Binding WindowTitle}" FontSize="22" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Item Identity" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">

                <TextBlock Text="Location / Category" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,5"/>
                <Border Background="#F1F5F9" CornerRadius="6" Padding="12,10" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📂" Margin="0,0,8,0" Foreground="#F59E0B"/>
                        <TextBlock Text="{Binding CategoryPath}" FontWeight="SemiBold" Foreground="#334155"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Smart SKU / Barcode" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Barcode}" Padding="10" FontSize="16" FontWeight="Bold" Background="#F8FAFC"/>

                    <Button Grid.Column="1" Command="{Binding GenerateBarcodeCommand}" 
                            Content="🔄" ToolTip="Regenerate Code"
                            Background="Transparent" Foreground="#64748B"
                            BorderBrush="#E2E8F0" BorderThickness="1"
                            Padding="10,0" Margin="10,0,0,0"/>
                </Grid>

                <TextBlock Text="Product Name" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Name}" Padding="10" FontSize="14" Margin="0,0,0,20"/>

                <TextBlock Text="Description (Optional)" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Description}" 
                         Padding="10" 
                         Height="180" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"/>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="CANCEL" Command="{Binding CancelCommand}" 
                        Background="Transparent" Foreground="#64748B" FontWeight="Bold" Margin="0,0,10,0"/>

                <Button Content="SAVE PRODUCT" Command="{Binding SaveCommand}" 
                        Background="#009688" Foreground="White" Padding="25,12" 
                        FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>