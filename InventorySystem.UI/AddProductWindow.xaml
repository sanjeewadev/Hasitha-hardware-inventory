<Window x:Class="InventorySystem.UI.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Manager" Height="750" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F1F5F9">

    <Border Background="White" Margin="20" CornerRadius="10" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock FontSize="24" FontWeight="Bold" Foreground="#1E293B">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Edit Product"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditingProduct.Id}" Value="0">
                                    <Setter Property="Text" Value="Add New Product"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="Define item details and base settings." Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>

                    <TextBlock Text="Location / Category" Foreground="#64748B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border Background="#F1F5F9" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5" Height="45" Margin="0,0,0,15" Padding="15,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="📂" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#F59E0B"/>
                            <TextBlock Grid.Column="1" Text="{Binding CategoryDisplayPath}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#334155"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="Smart SKU / Barcode" Foreground="#64748B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding EditingProduct.Barcode, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="45" Padding="10" VerticalContentAlignment="Center" BorderBrush="#CBD5E1" FontSize="14" FontWeight="Bold">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button Grid.Column="1" Content="⚡" Command="{Binding GenerateCodeCommand}" 
                                Width="45" Height="45" Margin="5,0,0,0" Background="Transparent" BorderBrush="#CBD5E1" BorderThickness="1" Foreground="Gray"
                                ToolTip="Generate Random Code">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <TextBlock Text="Product Name" Foreground="#64748B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditingProduct.Name, UpdateSourceTrigger=PropertyChanged}" 
                             Height="45" Padding="10" VerticalContentAlignment="Center" BorderBrush="#CBD5E1" FontSize="14" Margin="0,0,0,20">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Inventory Settings" Foreground="#1E293B" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Selling Unit" Foreground="#64748B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding UnitOptions}" SelectedItem="{Binding EditingProduct.Unit}"
                                      Height="45" Padding="10" FontSize="14" VerticalContentAlignment="Center">
                                <ComboBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Low Stock Alert Level" Foreground="#64748B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditingProduct.LowStockThreshold, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="45" Padding="10" VerticalContentAlignment="Center" BorderBrush="#CBD5E1" FontSize="14">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Description (Optional)" Foreground="#64748B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditingProduct.Description, UpdateSourceTrigger=PropertyChanged}" 
                             Height="80" Padding="10" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="CANCEL" Command="{Binding CancelCommand}" 
                        Background="Transparent" Foreground="#64748B" FontWeight="Bold" Margin="0,0,15,0" Cursor="Hand"/>

                <Button Content="SAVE PRODUCT" Command="{Binding SaveCommand}" 
                        Background="#009688" Foreground="White" Padding="25,12" FontWeight="Bold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>