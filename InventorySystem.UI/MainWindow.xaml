<Window x:Class="InventorySystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:InventorySystem.UI.Views"
        xmlns:vm="clr-namespace:InventorySystem.UI.ViewModels"
        mc:Ignorable="d"
        Title="Inventory Management System" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <StackPanel>
                <TextBlock Text="INVENTORY" FontSize="22" FontWeight="Bold" 
                           Foreground="{StaticResource TextLightBrush}" Margin="25,30,0,40"
                           HorizontalAlignment="Center"/>

                <RadioButton Style="{StaticResource NavButtonStyle}" 
                             Command="{Binding NavigateToProductsCommand}" IsChecked="True">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Icon_Products}" Width="16" Height="16" Stretch="Uniform"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                              Margin="0,0,15,0"/>
                        <TextBlock Text="Products" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource NavButtonStyle}" 
                             Command="{Binding NavigateToCategoriesCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Icon_Categories}" Width="16" Height="16" Stretch="Uniform"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                              Margin="0,0,15,0"/>
                        <TextBlock Text="Categories" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource NavButtonStyle}" 
                             Command="{Binding NavigateToStockCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Icon_Stock}" Width="16" Height="16" Stretch="Uniform"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                              Margin="0,0,15,0"/>
                        <TextBlock Text="Stock In/Out" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource NavButtonStyle}" Margin="0,20,0,0" Command="{Binding NavigateToPOSCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Icon_POS}" Width="16" Height="16" Stretch="Uniform"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                              Margin="0,0,15,0"/>
                        <TextBlock Text="Point of Sale" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToReportsCommand}" >
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Icon_Reports}" Width="16" Height="16" Stretch="Uniform"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                              Margin="0,0,15,0"/>
                        <TextBlock Text="Reports" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="Dashboard" VerticalAlignment="Center" Margin="25,0" 
                               FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                        <TextBlock Text="Admin User" VerticalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="20"/>
        </Grid>
    </Grid>
</Window>