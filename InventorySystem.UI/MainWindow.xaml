<Window x:Class="InventorySystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Management System" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}"
        
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="0,40,0,50">
                    <TextBlock Text="INVENTORY" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="MANAGEMENT" FontSize="10" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="MAIN MENU" FontSize="11" Foreground="#64748B" FontWeight="Bold" Margin="25,0,0,10"/>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToProductsCommand}" IsChecked="True">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Products}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Products" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToInventoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Categories}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Inventory Catalog" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToStockCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Stock}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Stock In / Out" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToPOSCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_POS}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Point of Sale" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <TextBlock Text="ANALYTICS" FontSize="11" Foreground="#64748B" FontWeight="Bold" Margin="25,30,0,10"/>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToTodaySalesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Today}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Today's Sales" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToHistoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_History}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Sales History" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToDashboardCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Dashboard}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <RadioButton Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateToSettingsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Settings}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"/>
                            <TextBlock Text="Settings &amp; Backup" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="30,0">
                        <Border Width="35" Height="35" CornerRadius="20" Background="{StaticResource PrimaryBrush}" Margin="0,0,10,0">
                            <TextBlock Text="A" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Admin User" FontWeight="SemiBold" Foreground="#334155"/>
                            <TextBlock Text="Administrator" FontSize="11" Foreground="#94A3B8"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="30"/>
        </Grid>
    </Grid>
</Window>