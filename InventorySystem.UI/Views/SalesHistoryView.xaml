<UserControl x:Class="InventorySystem.UI.Views.SalesHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1100"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F1F5F9"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVoided}" Value="True">
                    <Setter Property="Background" Value="#FEF2F2"/>
                    <Setter Property="Foreground" Value="#EF4444"/>
                    <Setter Property="Opacity" Value="0.75"/>
                </DataTrigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Sales History &amp; Logs" FontSize="26" FontWeight="Bold" Foreground="{StaticResource SidebarBrush}"/>
            <TextBlock Text="View and audit past transactions." Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="From Date" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="140" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,0,25,0">
                    <TextBlock Text="To Date" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="140" Padding="5"/>
                </StackPanel>

                <Button Command="{Binding SearchCommand}" Content="SEARCH RECORDS" Background="{StaticResource SidebarBrush}" Foreground="White" 
                        Height="36" VerticalAlignment="Bottom" Margin="0,0,10,0" FontSize="12" FontWeight="Bold"/>

                <Button Command="{Binding ResetFilterCommand}" Content="Reset Filter" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" 
                        Height="36" VerticalAlignment="Bottom" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding SalesHistory}" AutoGenerateColumns="False" IsReadOnly="True"
                  Background="White" BorderThickness="0" RowHeight="55"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9" HeadersVisibility="Column">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                    <Setter Property="Height" Value="45"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='dd MMM yyyy HH:mm'}" Width="160" Foreground="#64748B"/>

                <DataGridTextColumn Header="Ref #" Binding="{Binding ReferenceId}" Width="120"  Foreground="#94A3B8"/>

                <DataGridTemplateColumn Header="Sale Summary" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SummaryText}" VerticalAlignment="Center" Foreground="#334155"/>

                                <Border Background="#FEE2E2" CornerRadius="4" Margin="10,0,0,0" Padding="6,2"
                                        Visibility="{Binding IsVoided, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="DELETED" FontSize="10" FontWeight="Bold" Foreground="#EF4444"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Items" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#F1F5F9" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalItems}" FontWeight="Bold" Foreground="#64748B"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='Rs {0:N2}'}" Width="140" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="0,0,15,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}"
                                    Content="👁" Background="Transparent" BorderThickness="0" 
                                    FontSize="18" Foreground="#64748B" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="0" Grid.RowSpan="3" Background="#99000000" Panel.ZIndex="100"
              Visibility="{Binding IsDetailsVisible, Converter={StaticResource BoolToVis}}">
            <Border Background="White" Width="500" MaxHeight="600" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Text="Sale Receipt" FontSize="22" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedSale.Date, StringFormat='dd MMM yyyy - hh:mm tt'}" Foreground="Gray" Margin="0,0,0,20"/>

                        <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,0,15"
                                Visibility="{Binding SelectedSale.IsVoided, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="⚠ This sale has been deleted/voided." Foreground="#DC2626" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedSale.Items}" AutoGenerateColumns="False" IsReadOnly="True"
                              BorderThickness="0" Background="White" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                              HeadersVisibility="Column" Margin="0,0,0,20" RowHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=N2}" Width="90"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=N2}" Width="90" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" Content="Close" Command="{Binding CloseDetailsCommand}" 
                            Background="#F1F5F9" Foreground="#64748B" FontWeight="SemiBold" Padding="10" Margin="0,10,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>