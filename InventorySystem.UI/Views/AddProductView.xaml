<UserControl x:Class="InventorySystem.UI.Views.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="500" Height="450">
    <Border Background="White" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Add New Product" FontSize="22" FontWeight="SemiBold" 
                           Foreground="{StaticResource SidebarBrush}"/>
                <TextBlock Text="Enter product details below" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                    <TextBlock Text="Product Name" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                    <TextBox Text="{Binding Name}" Padding="10" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,15">
                    <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedItem="{Binding SelectedCategory}" 
                              DisplayMemberPath="Name"
                              Padding="10" FontSize="14" Height="40"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                    <TextBlock Text="Buying Price ($)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                    <TextBox Text="{Binding BuyingPrice}" Padding="10" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
                    <TextBlock Text="Selling Price ($)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                    <TextBox Text="{Binding SellingPrice}" Padding="10" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,15">
                    <TextBlock Text="Initial Quantity" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                    <TextBox Text="{Binding Quantity}" Padding="10" FontSize="14"/>
                </StackPanel>
            </Grid>

            <Button Grid.Row="2" Content="SAVE PRODUCT" Command="{Binding SaveCommand}" 
                    Height="45" FontSize="14" Margin="0,20,0,0"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Border>
</UserControl>