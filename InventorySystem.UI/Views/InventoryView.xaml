<UserControl x:Class="InventorySystem.UI.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Catalog Manager" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="New Category Name" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" 
                                 Tag="E.g. Electronics" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="+ MAIN" Command="{Binding AddMainCategoryCommand}" Background="#1E293B" FontSize="12"/>
                            <Button Grid.Column="2" Content="+ SUB" Command="{Binding AddSubCategoryCommand}" Background="#009688" FontSize="12"/>
                        </Grid>
                    </StackPanel>

                    <TextBox Grid.Row="2" Text="{Binding CategorySearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Search folders..." Margin="0,0,0,15"/>

                    <TreeView Grid.Row="3" ItemsSource="{Binding CategoryTree}" BorderThickness="0"
                          SelectedItemChanged="TreeView_SelectedItemChanged">

                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubCategories}">

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="📁" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#F59E0B"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>

                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <Button Grid.Row="4" Content="Delete Selected Category" Command="{Binding DeleteCategoryCommand}" 
                            Background="Transparent" Foreground="#EF4444" BorderThickness="0" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Background="#F9F9F9" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Products inside: " FontSize="20" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedCategory.Name}" FontSize="20" FontWeight="Bold" Foreground="#2B3649" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <TextBox Grid.Column="1" Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Search products by name..." Margin="0,0,15,0"/>

                    <Button Grid.Column="2" Content="+ ADD PRODUCT" Command="{Binding AddProductCommand}" 
                            Padding="20,10" Background="#009688"/>
                </Grid>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" AutoGenerateColumns="False" IsReadOnly="True" 
                          BorderThickness="0" Background="White" RowHeight="50">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="15,0"/>
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#F1F5F9"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="SKU / CODE" Binding="{Binding Barcode}" Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas, Courier New, Monospace"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Foreground" Value="#475569"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="15,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="PRODUCT NAME" Binding="{Binding Name}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Name}"/>
                                    <Setter Property="Margin" Value="15,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="LOCATION / CATEGORY" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                                        <TextBlock Text="📂" Foreground="#F59E0B" Margin="0,0,8,0" FontSize="14"/>
                                        <TextBlock Text="{Binding Category.Name}" 
                                                   Foreground="#64748B" 
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Category.Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="ACTIONS" Width="220">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">

                                        <Button Content="VIEW" Command="{Binding DataContext.ViewProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}" 
                                                Background="#1E293B" Foreground="White" FontSize="11" Height="30" Padding="15,0" Margin="0,0,5,0"/>

                                        <Button Content="EDIT" Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                Background="#3B82F6" Foreground="White" FontSize="11" Height="30" Padding="15,0" Margin="0,0,5,0"/>

                                        <Button Content="DEL" Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}" 
                                                Background="#EF4444" Foreground="White" FontSize="11" Height="30" Padding="10,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="1" Text="Select a category to manage products." 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontSize="18">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedCategory}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Grid>

        <Grid Background="#7F000000" Visibility="{Binding IsDetailVisible, Converter={StaticResource BoolToVis}}">
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CloseDetailCommand}"/>
            </Grid.InputBindings>

            <Border Background="White" Width="750" Height="550" CornerRadius="8" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{x:Null}"/>
                </Border.InputBindings>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,25" LastChildFill="False">
                        <StackPanel>
                            <TextBlock Text="{Binding ViewingProduct.Name}" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>
                            <TextBlock Text="{Binding ViewingProduct.Category.Name, StringFormat='Category: {0}'}" Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                        <Button DockPanel.Dock="Right" Content="✕" Command="{Binding CloseDetailCommand}" 
                                Background="Transparent" Foreground="#64748B" FontSize="20" Padding="5"/>
                    </DockPanel>

                    <Border Grid.Row="1" Background="#F8FAFC" Padding="15" CornerRadius="6" Margin="0,0,0,25">
                        <UniformGrid Columns="3">
                            <StackPanel>
                                <TextBlock Text="Total Quantity" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding ViewingProduct.Quantity}" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Selling Price (Standard)" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding ViewingProduct.SellingPrice, StringFormat=N2}" FontSize="24" FontWeight="Bold" Foreground="#009688"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Buying Price (Latest)" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding ViewingProduct.BuyingPrice, StringFormat=N2}" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>
                            </StackPanel>
                        </UniformGrid>
                    </Border>

                    <TextBlock Grid.Row="2" Text="Inventory Batches (History &amp; Cost Variations)" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <DataGrid Grid.Row="2" ItemsSource="{Binding ProductBatches}" Margin="0,25,0,0" AutoGenerateColumns="False" IsReadOnly="True"
                              BorderThickness="1" BorderBrush="#E2E8F0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date Received" Binding="{Binding ReceivedDate, StringFormat='dd MMM yyyy'}" Width="150"/>
                            <DataGridTextColumn Header="Original Qty" Binding="{Binding InitialQuantity}" Width="100"/>
                            <DataGridTextColumn Header="Remaining" Binding="{Binding RemainingQuantity}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Cost Price (This Batch)" Binding="{Binding CostPrice, StringFormat=N2}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="EDIT DETAILS" Background="#3B82F6" Padding="20,10" Margin="0,0,10,0"/>
                        <Button Content="CLOSE" Command="{Binding CloseDetailCommand}" Background="#94A3B8" Padding="20,10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>