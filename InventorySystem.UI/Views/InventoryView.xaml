<UserControl x:Class="InventorySystem.UI.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Catalog Manager" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="New Category Name" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="E.g. Electronics" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="+ MAIN" Command="{Binding AddMainCategoryCommand}" Background="#1E293B" FontSize="12"/>
                        <Button Grid.Column="2" Content="+ SUB" Command="{Binding AddSubCategoryCommand}" Background="#009688" FontSize="12"/>
                    </Grid>
                </StackPanel>

                <TextBox Grid.Row="2" Text="{Binding CategorySearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Tag="Search folders..." Margin="0,0,0,15"/>

                <TreeView Grid.Row="3" ItemsSource="{Binding CategoryTree}" BorderThickness="0">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding SubCategories}">
                            <Border Background="Transparent" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.SetSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📁" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#F39C12"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <Button Grid.Row="4" Content="Delete Selected" Command="{Binding DeleteCategoryCommand}" 
                        Background="Transparent" Foreground="#EF4444" BorderThickness="0" Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="#F9F9F9" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Products inside: " FontSize="20" Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedCategory.Name}" FontSize="20" FontWeight="Bold" Foreground="#2B3649" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <TextBox Grid.Column="1" Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="8" FontSize="13" Margin="0,0,15,0"
                         Background="White" ToolTip="Search products in this folder..."/>

                <Button Grid.Column="2" Content="+ ADD PRODUCT" Command="{Binding AddProductCommand}" 
                        Padding="15,10" Background="#009688"/>
            </Grid>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" AutoGenerateColumns="False" IsReadOnly="True" 
                      BorderThickness="0" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding SellingPrice, StringFormat=N2}" Width="100"/>

                    <DataGridTemplateColumn Header="Actions" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X" Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" Foreground="Red" Background="Transparent" BorderThickness="0" FontWeight="Bold"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="1" Text="Select a Category on the left to manage products." 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontSize="18">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedCategory}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>