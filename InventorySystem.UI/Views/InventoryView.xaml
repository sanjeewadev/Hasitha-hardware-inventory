<UserControl x:Class="InventorySystem.UI.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1100">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0" Padding="25" Background="#F8FAFC">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Catalog Manager" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>
                    <TextBlock Text="New Category Name" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" 
                             Height="42" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#CBD5E1" FontSize="13">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="+ MAIN" Command="{Binding AddMainCategoryCommand}" 
                                Background="#1E293B" Foreground="White" Height="38" Margin="0,0,5,0" FontWeight="SemiBold" FontSize="12" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Grid.Column="1" Content="+ SUB" Command="{Binding AddSubCategoryCommand}" 
                                Background="#009688" Foreground="White" Height="38" Margin="5,0,0,0" FontWeight="SemiBold" FontSize="12" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Separator Background="#E2E8F0" Margin="0,20"/>

                    <TextBox Text="{Binding CategorySearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Search folders..." Height="38" Padding="10,0" VerticalContentAlignment="Center" 
                             BorderBrush="#E2E8F0" Background="White" Margin="0,0,0,15">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>

                <TreeView Grid.Row="1" ItemsSource="{Binding CategoryTree}" BorderThickness="0" Background="Transparent" Margin="-5,0,0,0"
                          SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding SubCategories}">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="📁" Foreground="#F59E0B" Margin="0,0,8,0" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" Foreground="#334155" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#009688"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>

                <Button Grid.Row="2" Content="Delete Selected Category" Command="{Binding DeleteCategoryCommand}" 
                        Background="Transparent" Foreground="#EF4444" BorderBrush="#EF4444" BorderThickness="1"
                        Height="40" Margin="0,10,0,0" Cursor="Hand" FontWeight="SemiBold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="25" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Products inside:" Foreground="#64748B" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='None'}" FontWeight="Bold" Foreground="#1E293B" FontSize="16" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBox Grid.Column="1" Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Search products by name..." Width="250" Height="42" Padding="15,0" VerticalContentAlignment="Center"
                             BorderBrush="#CBD5E1" Margin="0,0,15,0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button Grid.Column="2" Content="+ ADD PRODUCT" Command="{Binding AddProductCommand}" 
                            Background="#009688" Foreground="White" Padding="20,0" Height="42" FontWeight="Bold" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" AutoGenerateColumns="False" IsReadOnly="True"
                      BorderThickness="0" Background="White" RowHeight="60"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                      HeadersVisibility="Column" Padding="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="25,0,0,0"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F2F1"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8FAFC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="0">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="SKU / CODE" Binding="{Binding Barcode}" Width="140" Foreground="#64748B">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="25,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="PRODUCT NAME" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#1E293B" FontSize="14" VerticalAlignment="Center" Margin="25,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="LOCATION" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                                    <TextBlock Text="📁" Foreground="#F59E0B" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="{Binding Category.Name}" Foreground="#64748B" FontWeight="Medium"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ACTIONS" Width="210">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0">
                                    <Button Content="VIEW" Command="{Binding DataContext.ViewProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="#1E293B" Foreground="White" FontSize="10" FontWeight="Bold" Padding="10,5" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="EDIT" Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="#3B82F6" Foreground="White" FontSize="10" FontWeight="Bold" Padding="10,5" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="DEL" Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="#EF4444" Foreground="White" FontSize="10" FontWeight="Bold" Padding="10,5">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Panel.ZIndex="100"
              Background="#7F000000" Visibility="{Binding IsDetailVisible, Converter={StaticResource BoolToVis}}">

            <Border Background="White" Width="800" Height="550" CornerRadius="8" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,25" LastChildFill="False">
                        <StackPanel>
                            <TextBlock Text="{Binding ViewingProduct.Name}" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>
                            <TextBlock Text="{Binding ViewingProduct.Category.Name, StringFormat='Category: {0}'}" Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Border DockPanel.Dock="Right" BorderBrush="#009688" BorderThickness="2" CornerRadius="6" Padding="15,5" Margin="0,0,15,0">
                            <StackPanel>
                                <TextBlock Text="Total Quantity" FontSize="10" Foreground="#009688" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ViewingProduct.Quantity}" FontSize="20" FontWeight="Bold" Foreground="#009688" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border DockPanel.Dock="Right" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="4" Padding="15,5" Margin="0,0,15,0" MinWidth="100">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="SKU / Barcode" FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding ViewingProduct.Barcode}" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>
                    </DockPanel>

                    <TextBlock Grid.Row="2" Text="Inventory Batches (History &amp; Cost Variations)" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="2" ItemsSource="{Binding ProductBatches}" Margin="0,25,0,0" AutoGenerateColumns="False" IsReadOnly="True" BorderThickness="1" BorderBrush="#E2E8F0">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter Property="Height" Value="35"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E0F2F1"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8FAFC"/>
                                    </Trigger>

                                    <DataTrigger Binding="{Binding RemainingQuantity}" Value="0">
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Setter Property="Background" Value="#FAFAFA"/>
                                        <Setter Property="ToolTip" Value="Sold Out / History Record"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ReceivedDate, StringFormat='dd MMM yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Original" Binding="{Binding InitialQuantity}" Width="110"/>
                            <DataGridTextColumn Header="Current" Binding="{Binding RemainingQuantity}" Width="110" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Buying" Binding="{Binding CostPrice, StringFormat=N2}" Width="110"/>
                            <DataGridTextColumn Header="Selling" Binding="{Binding SellingPrice, StringFormat=N2}" Width="110" Foreground="#009688" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Disc %" Binding="{Binding Discount}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="3" Content="CLOSE" Command="{Binding CloseDetailCommand}" Background="#94A3B8" Padding="20,10" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>