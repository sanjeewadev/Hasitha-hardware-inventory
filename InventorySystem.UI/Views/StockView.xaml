<UserControl x:Class="InventorySystem.UI.Views.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="#F8FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Stock Manager" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

                <TextBlock Grid.Row="1" Text="1. Select Category" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Top"/>
                <TreeView Grid.Row="1" ItemsSource="{Binding CategoryTree}" BorderThickness="0" Margin="0,25,0,0">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding SubCategories}">
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="📁" FontSize="16" Foreground="#F59E0B" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <x:Code>
                        <![CDATA[
                            private void TreeView_SelectedItemChanged(object sender, RoutedPropertyChangedEventArgs<object> e) {
                                if (DataContext is InventorySystem.UI.ViewModels.StockViewModel vm) {
                                    vm.SelectedCategory = e.NewValue as InventorySystem.Core.Entities.Category;
                                }
                            }
                        ]]>
                    </x:Code>
                    <TreeView.Resources>
                        <Style TargetType="TreeView">
                            <EventSetter Event="SelectedItemChanged" Handler="TreeView_SelectedItemChanged"/>
                        </Style>
                    </TreeView.Resources>
                </TreeView>

                <StackPanel Grid.Row="2" Margin="0,15,0,5">
                    <TextBlock Text="2. Select Product" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,5"/>
                    <Border Background="#F1F5F9" CornerRadius="5" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" Margin="5,0,5,0" VerticalAlignment="Center" Foreground="Gray"/>

                            <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" VerticalAlignment="Center" FontSize="14"
                                     Tag="Search name or code..."/>
                        </Grid>
                    </Border>
                </StackPanel>

                <ListBox Grid.Row="3" ItemsSource="{Binding ProductsInSelectedCategory}" SelectedItem="{Binding SelectedProduct}"
                         BorderThickness="1" BorderBrush="#E2E8F0" Background="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#334155"/>
                                    <TextBlock Text="{Binding Barcode}" FontSize="11" Foreground="#94A3B8"/>
                                </StackPanel>
                                <Border Grid.Column="1" Background="#E0F2F1" CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}" 
                                               FontSize="11" FontWeight="Bold" Foreground="#009688"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="{Binding SelectedProduct.Name, TargetNullValue='Select a Product'}" 
                           FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Current Total Stock: " FontSize="16" Foreground="Gray"/>
                    <TextBlock Text="{Binding SelectedProduct.Quantity, TargetNullValue='-'}" 
                               FontSize="16" FontWeight="Bold" Foreground="#009688"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="25" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="RECEIVE STOCK &amp; UPDATE PRICE" FontWeight="Bold" Foreground="#009688" VerticalAlignment="Center"/>
                        <Border Background="#F8FAFC" CornerRadius="4" Padding="8,4" Margin="15,0,0,0">
                            <TextBlock Text="{Binding StockInDate, StringFormat='Date: dd MMM yyyy'}" Foreground="Gray" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <UniformGrid Grid.Row="1" Columns="2" Margin="0,0,0,15">
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="Quantity Arrived" Foreground="#64748B" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding StockInQty}" Padding="10" FontSize="15" FontWeight="Bold" BorderBrush="#009688"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Buying Cost (We Pay)" Foreground="#64748B" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding StockInCost}" Padding="10" FontSize="15"/>
                            <TextBlock Text="{Binding GeneratedSecretCode}" Foreground="#F59E0B" FontWeight="Bold" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <UniformGrid Grid.Row="2" Columns="2" Margin="0,0,0,15">
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="Set Selling Price (Shelf)" Foreground="#1E293B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding StockInSellingPrice}" Padding="10" FontSize="15" FontWeight="Bold" Background="#F0FDF4"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Max Discount %" Foreground="#1E293B" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding StockInDiscount}" Padding="10" FontSize="15"/>
                        </StackPanel>
                    </UniformGrid>

                    <Button Grid.Row="3" Content="CONFIRM &amp; UPDATE" Command="{Binding StockInCommand}" 
                            Background="#009688" Padding="0,12" FontSize="14" FontWeight="Bold" Cursor="Hand" Margin="0,10,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <TextBlock Grid.Row="2" Text="Batch History (FIFO Layers)" FontWeight="Bold" Margin="0,25,0,10" Foreground="#334155"/>
            <DataGrid Grid.Row="2" ItemsSource="{Binding BatchHistory}" Margin="0,55,0,0" AutoGenerateColumns="False" IsReadOnly="True" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding ReceivedDate, StringFormat='dd MMM yyyy'}" Width="120"/>
                    <DataGridTextColumn Header="Original Qty" Binding="{Binding InitialQuantity}" Width="100"/>
                    <DataGridTextColumn Header="Remaining" Binding="{Binding RemainingQuantity}" Width="100" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Cost Price" Binding="{Binding CostPrice, StringFormat=N2}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</UserControl>