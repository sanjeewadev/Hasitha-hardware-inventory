<UserControl x:Class="InventorySystem.UI.Views.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <Style x:Key="StandardExpanderStyle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="16" Height="16">
                            <Path x:Name="ExpandPath" Data="M0,0 L0,6 L6,0 z" Fill="#94A3B8" Margin="1,1,1,1"
                                  HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="225"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ExpandPath" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="135"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ExpandPath" Property="Fill" Value="#334155"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ExpandPath" Property="Fill" Value="#009688"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0" Padding="0,20,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20,0,20,15">
                    <TextBlock Text="Stock Adjustments" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#F1F5F9" CornerRadius="6" Padding="8,6" Margin="20,0,20,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" Margin="5,0,8,0" VerticalAlignment="Center" Foreground="#94A3B8"/>
                            <TextBox Grid.Column="1" Text="{Binding CategorySearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" VerticalAlignment="Center" FontSize="13" 
                                     Tag="Search Categories..."/>
                        </Grid>
                    </Border>

                    <TreeView Grid.Row="1" ItemsSource="{Binding CategoryTree}" BorderThickness="0" Background="Transparent" 
                              SelectedItemChanged="TreeView_SelectedItemChanged" ClipToBounds="True" >
                        <TreeView.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black"/>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubCategories}">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="📁" FontSize="16" Foreground="#F59E0B" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="#334155" VerticalAlignment="Center"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="True"/>
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#334155"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Border x:Name="Bd" Grid.Row="0" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" MinHeight="32"/>
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="19"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ToggleButton x:Name="Expander" Style="{StaticResource StandardExpanderStyle}" ClickMode="Press" IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                    <ContentPresenter x:Name="PART_Header" Grid.Column="1" ContentSource="Header" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="2,0,0,0"/>
                                                </Grid>
                                                <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Margin="15,0,0,0"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="HasItems" Value="False">
                                                    <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                                                </Trigger>
                                                <Trigger Property="IsExpanded" Value="False">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#E0F2F1"/>
                                                    <Setter Property="Foreground" Value="#009688"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#F1F5F9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>

                <StackPanel Grid.Row="2" Margin="20,15,20,10">
                    <Border Background="#F1F5F9" CornerRadius="6" Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" Margin="5,0,8,0" VerticalAlignment="Center" Foreground="#94A3B8"/>
                            <TextBox Grid.Column="1" Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" VerticalAlignment="Center" FontSize="13" 
                                     Tag="Search Products..."/>
                        </Grid>
                    </Border>
                </StackPanel>

                <ListBox Grid.Row="3" ItemsSource="{Binding ProductsInSelectedCategory}" SelectedItem="{Binding SelectedProduct}"
                         BorderThickness="1" BorderBrush="#E2E8F0" Background="White" HorizontalContentAlignment="Stretch" Margin="20,0,0,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Margin" Value="0,0,0,5"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#334155" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Barcode}" FontSize="11" Foreground="#94A3B8"/>
                                </StackPanel>
                                <Border Grid.Column="1" Background="#E0F2F1" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Quantity}" FontSize="11" FontWeight="Bold" Foreground="#009688"/>
                                        <TextBlock Text="{Binding Unit}" FontSize="10" Foreground="#009688" Margin="2,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30,20,30,30">

            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsProductSelected}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="👈" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Select a Product" FontSize="24" FontWeight="Bold" Foreground="#CBD5E1" HorizontalAlignment="Center"/>
                    <TextBlock Text="Select an item from the list to view history or adjust stock." 
                               FontSize="14" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsProductSelected}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,25" Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectedProduct.Name, TargetNullValue='Select a Product'}" 
                               FontSize="26" FontWeight="Bold" Foreground="#1E293B" VerticalAlignment="Bottom"/>
                    <Border Background="#F0FDFA" BorderBrush="#009688" BorderThickness="1" CornerRadius="4" Margin="15,0,0,2" Padding="10,2" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Stock: " FontSize="12" Foreground="#009688" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedProduct.Quantity, TargetNullValue='-'}" 
                                       FontSize="14" FontWeight="Bold" Foreground="#009688" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding CurrentUnit}" FontSize="12" Foreground="#009688" VerticalAlignment="Center" Margin="3,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="30" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.03" BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="1. Select Batch to Reduce" Foreground="#1E293B" FontWeight="Bold" FontSize="13" Margin="0,0,0,8"/>
                                <ComboBox ItemsSource="{Binding ActiveBatches}" SelectedItem="{Binding SelectedAdjustmentBatch}"
                                          Padding="10,8" FontSize="13" Cursor="Hand" BorderBrush="#E2E8F0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ReceivedDate, StringFormat='{} {0:dd MMM yyyy}'}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding RemainingQuantity, StringFormat=' - Qty: {0}'}" Foreground="Gray"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="2. Qty to Remove" Foreground="#1E293B" FontWeight="Bold" FontSize="13"/>
                                    <TextBlock Text="{Binding CurrentUnit, StringFormat=' ({0})'}" Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBox Text="{Binding StockOutQty}" Padding="10,8" FontSize="14" FontWeight="Bold" BorderBrush="#E2E8F0" Background="#FEF2F2" Foreground="#EF4444"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="3. Reason for Removal" Foreground="#1E293B" FontWeight="Bold" FontSize="13" Margin="0,0,0,8"/>
                                <ComboBox ItemsSource="{Binding AdjustmentReasons}" SelectedItem="{Binding StockOutReason}"
                                          Padding="10,8" FontSize="14" Cursor="Hand" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                        </Grid>

                        <Button Grid.Row="1" Content="✔ CONFIRM REMOVAL" Command="{Binding StockOutCommand}" 
                                Background="#EF4444" Foreground="White" Width="220" HorizontalAlignment="Right"
                                Padding="0,12" FontSize="13" FontWeight="Bold" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Batch History" FontWeight="Bold" Margin="0,0,0,10" Foreground="#334155" FontSize="16"/>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding BatchHistory}" AutoGenerateColumns="False" 
                              IsReadOnly="True" Background="White" BorderBrush="#E2E8F0" BorderThickness="1"
                              RowHeight="40" HeadersVisibility="Column">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date Received" Binding="{Binding ReceivedDate, StringFormat='dd MMM yyyy'}" Width="150" Foreground="#475569"/>
                            <DataGridTextColumn Header="Original Qty" Binding="{Binding InitialQuantity}" Width="100"/>
                            <DataGridTextColumn Header="Remaining Qty" Binding="{Binding RemainingQuantity, StringFormat={}{0:0.###}}" Width="120" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Cost Price" Binding="{Binding CostPrice, StringFormat=N2}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>