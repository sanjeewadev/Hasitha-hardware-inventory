<UserControl x:Class="InventorySystem.UI.Views.TodaySalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000"
             Background="Transparent">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Today's Live Transactions" FontSize="26" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Manage sales made during the current shift." Foreground="#94A3B8" Margin="0,5,0,0"/>
            </StackPanel>

            <Border Grid.Column="1" Background="White" CornerRadius="6" BorderBrush="#E2E8F0" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍" Foreground="#94A3B8" VerticalAlignment="Center" Margin="8,0,8,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Search Receipt ID..." BorderThickness="0" Background="Transparent"
                             VerticalAlignment="Center" FontSize="14"/>
                </Grid>
            </Border>
        </Grid>

        <DataGrid Grid.Row="1" ItemsSource="{Binding TodayTransactions}" AutoGenerateColumns="False" 
                  IsReadOnly="True" Background="White" BorderThickness="0" RowHeight="55"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#F1F5F9"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F8FAFC"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Date, StringFormat='hh:mm tt'}" Width="90" Foreground="#64748B"/>

                <DataGridTemplateColumn Header="Receipt #" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding ReferenceId}" 
                                    Command="{Binding DataContext.CopyIdCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding ReferenceId}"
                                    Foreground="#3B82F6" Background="Transparent" BorderThickness="0" 
                                    FontWeight="Bold" Cursor="Hand" ToolTip="Click to Copy ID"
                                    HorizontalContentAlignment="Left"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Details" Binding="{Binding CustomerDisplay}" Width="150" Foreground="#64748B"/>

                <DataGridTextColumn Header="Items" Binding="{Binding SummaryText}" Width="*" FontWeight="SemiBold" Foreground="#334155"/>

                <DataGridTextColumn Binding="{Binding TotalAmount, StringFormat='Rs {0:N2}'}" Width="140" FontWeight="Bold" Foreground="#009688">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,15,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        Content="👁" Background="#E0F2FE" Foreground="#0284C7" BorderThickness="0" 
                                        Width="35" Height="35" Margin="0,0,8,0" Cursor="Hand" ToolTip="View Details">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Button Command="{Binding DataContext.DeleteSaleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        Content="🗑" Background="#FEE2E2" Foreground="#EF4444" BorderThickness="0" 
                                        Width="35" Height="35" Cursor="Hand" ToolTip="Void Transaction">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#99000000" Panel.ZIndex="100"
              Visibility="{Binding IsDetailsVisible, Converter={StaticResource BoolToVis}}">

            <Border Background="White" Width="550" MaxHeight="650" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Sale Receipt" FontSize="22" FontWeight="Bold" Foreground="#1E293B"/>
                            <Button Content="{Binding SelectedSale.ReferenceId}" 
                                    Command="{Binding CopyIdCommand}" CommandParameter="{Binding SelectedSale.ReferenceId}"
                                    FontSize="16" FontWeight="Bold" Foreground="#3B82F6" Background="Transparent" 
                                    BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand"/>
                        </Grid>

                        <Border Background="#F8FAFC" Padding="15" CornerRadius="6" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Customer / Type" FontSize="11" Foreground="#94A3B8"/>
                                <TextBlock Text="{Binding SelectedSale.CustomerDisplay}" FontSize="14" FontWeight="SemiBold" Foreground="#334155"/>
                                <TextBlock Text="{Binding SelectedSale.Date, StringFormat='dd MMM yyyy - hh:mm tt'}" FontSize="12" Foreground="#64748B" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedSale.Items}" AutoGenerateColumns="False" IsReadOnly="True"
                              BorderThickness="0" Background="White" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                              HeadersVisibility="Column" Margin="0,0,0,20" RowHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=N2}" Width="90"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=N2}" Width="90" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="🖨 PRINT RECEIPT" Command="{Binding PrintReceiptCommand}" 
                                Background="#009688" Foreground="White" FontWeight="Bold" Height="45" 
                                HorizontalAlignment="Left" Padding="20,0" Cursor="Hand" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Grid.Column="1" Content="Close" Command="{Binding CloseDetailsCommand}" 
                                Background="#F1F5F9" Foreground="#64748B" FontWeight="SemiBold" Height="45" 
                                Padding="25,0" Cursor="Hand" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>