<UserControl x:Class="InventorySystem.UI.Views.TodaySalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Today's Live Transactions" FontSize="26" FontWeight="Bold" Foreground="#1E293B"/>
            <TextBlock Text="Manage sales made during the current shift." FontSize="14" Foreground="#64748B" Margin="0,5,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding TodaySales}" AutoGenerateColumns="False" IsReadOnly="True" 
                  BorderThickness="0" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Date, StringFormat='HH:mm tt'}" Width="120"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding Product.Name}" Width="*"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80" FontWeight="Bold"/>
                <DataGridTextColumn Header="Details" Binding="{Binding Note}" Width="200" Foreground="#64748B"/>

                <DataGridTemplateColumn Header="Actions" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="VOID SALE" 
                                    Command="{Binding DataContext.VoidSaleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}" 
                                    Background="#EF4444" Foreground="White"
                                    FontSize="11" Height="30" Padding="15,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsVoided}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>