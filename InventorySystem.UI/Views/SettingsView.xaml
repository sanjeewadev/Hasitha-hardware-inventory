<UserControl x:Class="InventorySystem.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1100"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="System Settings" FontSize="26" FontWeight="Bold" Foreground="{StaticResource SidebarBrush}"/>
            <TextBlock Text="Manage backups, printers, and cloud sync." Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25" Margin="0,0,25,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.05" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <TextBlock Text="Backup Storage Location" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Text="{Binding BackupFolderPath}" IsReadOnly="True" 
                                     Padding="12" Height="42" VerticalContentAlignment="Center"
                                     BorderBrush="#E2E8F0" Background="#F8FAFC" Foreground="{StaticResource TextSecondaryBrush}"/>

                            <Button Grid.Column="1" Content="BROWSE" Command="{Binding BrowseFolderCommand}"
                                    Background="{StaticResource SidebarBrush}" Foreground="White" 
                                    Height="42" Padding="20,0" FontWeight="Bold" FontSize="11" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Backups}" AutoGenerateColumns="False" IsReadOnly="True"
                              BorderThickness="0" Background="White" RowHeight="55"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9" HeadersVisibility="Column">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date Created" Binding="{Binding CreatedDate, StringFormat='dd MMM yyyy - hh:mm tt'}" Width="200"/>
                            <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Restore" Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}" Background="#3B82F6" Foreground="White" Padding="10,5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1">

                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Printer Configuration" FontSize="16" FontWeight="Bold" Foreground="{StaticResource SidebarBrush}" Margin="0,0,0,15"/>

                        <TextBlock Text="Select Receipt Printer" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding InstalledPrinters}" SelectedItem="{Binding SelectedPrinter}" Height="40" Margin="0,0,0,15"/>

                        <TextBlock Text="Number of Copies" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CopyCount}" Height="40" VerticalContentAlignment="Center" Padding="5" Margin="0,0,0,20"/>

                        <Button Content="SAVE PRINTER SETTINGS" Command="{Binding SavePrinterSettingsCommand}" 
                                Background="{StaticResource PrimaryBrush}" Foreground="White" Padding="15" FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="25" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="16" FontWeight="Bold" Foreground="{StaticResource SidebarBrush}" Margin="0,0,0,15"/>

                        <Button Content="+ CREATE NEW BACKUP" Command="{Binding CreateBackupCommand}" 
                                Background="#10B981" Foreground="White" Padding="15" FontWeight="Bold" Cursor="Hand" Margin="0,0,0,10"/>

                        <Button Content="TEST CLOUD UPLOAD" Command="{Binding TestCloudUploadCommand}" 
                                Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Foreground="#64748B" Padding="15" FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>