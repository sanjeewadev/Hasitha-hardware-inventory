<UserControl x:Class="InventorySystem.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="White" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Data Management" FontSize="24" FontWeight="Bold" Foreground="#2B3649" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Command="{Binding BackupCommand}" 
                        Width="250" Height="180" Margin="0,0,20,0"
                        Background="#2B3649" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="💾" FontSize="50" HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="BACKUP DATA" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Save to USB / Disk" FontSize="12" Foreground="#CCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Command="{Binding RestoreCommand}" 
                        Width="250" Height="180" Margin="20,0,0,0"
                        Background="#E74C3C" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="📂" FontSize="50" HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="RESTORE DATA" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Upload Backup File" FontSize="12" Foreground="#FFD5D5" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

            <TextBlock Text="Note: Restoring data will overwrite your current inventory. Be careful!" 
                       Foreground="Gray" HorizontalAlignment="Center" Margin="0,40,0,0" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>