<UserControl x:Class="InventorySystem.UI.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,15" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14" Margin="0,0,10,0"/>

                    <ComboBox Grid.Column="1" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategoryFilter}"
                              DisplayMemberPath="Name" Padding="10" Height="40" Margin="0,0,10,0"/>

                    <Button Grid.Column="2" Content="Clear" Command="{Binding ClearSearchCommand}" Background="#95A5A6"/>
                </Grid>
            </Border>
            
            <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" AutoGenerateColumns="False" IsReadOnly="True" 
            BorderThickness="0" Background="White">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="2*"/>

                    <DataGridTextColumn Header="Category" Binding="{Binding Category.Parent.Name}" Width="*"/>

                    <DataGridTextColumn Header="Sub Category" Binding="{Binding Category.Name}" Width="*"/>

                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80" FontWeight="Bold"/>

                    <DataGridTemplateColumn Header="Action" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="VIEW" Command="{Binding DataContext.ViewProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" Background="#2B3649" Foreground="White" FontSize="11" Padding="10,5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Background="#7F000000" Visibility="{Binding IsDetailVisible, Converter={StaticResource BoolToVis}}">
            <Border Background="White" Width="600" Height="500" CornerRadius="8" Padding="25" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,20">
                        <TextBlock Text="{Binding ViewingProduct.Name}" FontSize="24" FontWeight="Bold" Foreground="#2B3649"/>
                        <Button DockPanel.Dock="Right" Content="X" Command="{Binding CloseDetailCommand}" 
                                Background="Transparent" Foreground="#555" FontSize="18" FontWeight="Bold" BorderThickness="0"/>
                    </DockPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Qty" Foreground="Gray"/>
                            <TextBlock Text="{Binding ViewingProduct.Quantity}" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Selling Price (Std)" Foreground="Gray"/>
                            <TextBlock Text="{Binding ViewingProduct.SellingPrice, StringFormat=N2}" FontSize="18" FontWeight="SemiBold" Foreground="#009688"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Buying Price (Std)" Foreground="Gray"/>
                            <TextBlock Text="{Binding ViewingProduct.BuyingPrice, StringFormat=N2}" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="2" Text="Stock Batches (Separate Prices)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid Grid.Row="2" ItemsSource="{Binding ProductBatches}" AutoGenerateColumns="False" IsReadOnly="True" 
                              BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,20,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ReceivedDate, StringFormat=d}" Width="*"/>
                            <DataGridTextColumn Header="Batch Qty" Binding="{Binding InitialQuantity}" Width="80"/>
                            <DataGridTextColumn Header="Cost Price" Binding="{Binding CostPrice, StringFormat=N2}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="EDIT PRODUCT" Command="{Binding EditProductCommand}" CommandParameter="{Binding ViewingProduct}"
                                Background="#2980B9" Padding="20,10" Margin="0,0,10,0"/>

                        <Button Content="DELETE PRODUCT" Command="{Binding DeleteProductCommand}" CommandParameter="{Binding ViewingProduct}"
                                Background="#E74C3C" Padding="20,10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>