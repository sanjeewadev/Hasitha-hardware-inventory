<UserControl x:Class="InventorySystem.UI.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="White">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Search products by name or code..." Margin="0,0,15,0" Padding="15,0" 
                             Height="42" VerticalContentAlignment="Center" FontSize="14"
                             BorderBrush="#CBD5E1">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button Grid.Column="1" Content="Clear" Command="{Binding ClearFilterCommand}" 
                            Background="#94A3B8" Foreground="White" Width="90" Height="42" FontSize="13" Cursor="Hand" FontWeight="SemiBold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" AutoGenerateColumns="False" IsReadOnly="True"
                      BorderThickness="0" Background="White" RowHeight="60" 
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                      HeadersVisibility="Column" Padding="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="20,0,0,0"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="0">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F2F1"/>
                                <Setter Property="Foreground" Value="#009688"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding Barcode}" Width="110" Foreground="#64748B">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="20,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Product Name" Width="1.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center" Margin="20,0">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#1E293B" FontSize="14"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="Gray" 
                                               TextTrimming="CharacterEllipsis" MaxWidth="250" HorizontalAlignment="Left"
                                               Visibility="{Binding Description, Converter={StaticResource StringToVis}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Category" Width="1.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                    <TextBlock Text="{Binding Category.Parent.Name}" Foreground="#94A3B8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Category.Parent}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text=" > " Foreground="#CBD5E1" Margin="5,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Category.Parent}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Category.Name}" Foreground="#64748B" FontWeight="Medium"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Total Qty" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#F0FDF4" CornerRadius="4" Padding="12,4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Quantity}" FontWeight="Bold" Foreground="#166534" FontSize="12"/>
                                        <TextBlock Text="{Binding Unit}" Foreground="#166534" FontSize="10" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Action" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <Button Content="VIEW DETAILS" Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            Background="#1E293B" Foreground="White" FontSize="10" FontWeight="Bold" 
                                            Padding="0" Height="30" Width="100" HorizontalAlignment="Left" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Background="#7F000000" Visibility="{Binding IsDetailVisible, Converter={StaticResource BoolToVis}}" Panel.ZIndex="50">
            <Border Background="White" Width="800" Height="600" CornerRadius="8" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,15" LastChildFill="False">
                        <StackPanel>
                            <TextBlock Text="{Binding ViewingProduct.Name}" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>
                            <TextBlock Text="{Binding ViewingProduct.Category.Name, StringFormat='Category: {0}'}" Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                        <Border DockPanel.Dock="Right" BorderBrush="#009688" BorderThickness="2" CornerRadius="6" Padding="15,5" Margin="0,0,15,0">
                            <StackPanel>
                                <TextBlock Text="Total Quantity" FontSize="10" Foreground="#009688" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ViewingProduct.Quantity}" FontSize="20" FontWeight="Bold" Foreground="#009688"/>
                                    <TextBlock Text="{Binding CurrentUnit}" FontSize="12" Foreground="#009688" Margin="4,0,0,2" VerticalAlignment="Bottom"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DockPanel>

                    <TextBlock Grid.Row="1" Text="{Binding ViewingProduct.Description}" 
                               FontSize="12" Foreground="#64748B" FontStyle="Italic" TextWrapping="Wrap" 
                               Margin="0,0,0,20" MaxWidth="700" HorizontalAlignment="Left"
                               Visibility="{Binding ViewingProduct.Description, Converter={StaticResource StringToVis}}"/>

                    <TextBlock Grid.Row="2" Text="Inventory Batches (History &amp; Cost Variations)" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="3" ItemsSource="{Binding ProductBatches}" Margin="0,0,0,0" 
                              AutoGenerateColumns="False" IsReadOnly="True" 
                              BorderThickness="1" BorderBrush="#E2E8F0"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                              HeadersVisibility="Column" RowHeight="40">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter Property="Height" Value="35"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E0F2F1"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8FAFC"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding RemainingQuantity}" Value="0">
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Setter Property="Background" Value="#FAFAFA"/>
                                        <Setter Property="ToolTip" Value="Sold Out / History Record"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ReceivedDate, StringFormat='dd MMM yyyy'}" Width="120" Foreground="#475569"/>
                            <DataGridTextColumn Header="Original" Binding="{Binding InitialQuantity}" Width="110"/>
                            <DataGridTextColumn Header="Current" Binding="{Binding RemainingQuantity}" Width="110" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Buying" Binding="{Binding CostPrice, StringFormat=N2}" Width="100"/>
                            <DataGridTextColumn Header="Selling" Binding="{Binding SellingPrice, StringFormat=N2}" Width="110" Foreground="#009688" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Discount %" Binding="{Binding Discount}" Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="4" Content="CLOSE" Command="{Binding CloseDetailCommand}" Background="#94A3B8" Padding="20,10" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>