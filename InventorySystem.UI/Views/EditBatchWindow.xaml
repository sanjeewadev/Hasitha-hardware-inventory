<Window x:Class="InventorySystem.UI.Views.EditBatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Batch" Height="380" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="White" CornerRadius="10" BorderBrush="#E2E8F0" BorderThickness="1" Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Remaining Quantity (Read Only)" Foreground="Gray" FontSize="12"/>
                <TextBox Text="{Binding Quantity, Mode=OneWay}" IsReadOnly="True" Background="#F1F5F9" Padding="8" Margin="0,0,0,15" FontWeight="Bold"/>

                <TextBlock Text="Buying Price" Foreground="#64748B" FontSize="12"/>
                <TextBox Text="{Binding CostPrice}" Padding="8" Margin="0,0,0,15"/>

                <TextBlock Text="Selling Price" Foreground="#64748B" FontSize="12"/>
                <TextBox Text="{Binding SellingPrice}" Padding="8" Margin="0,0,0,15" BorderBrush="#009688" BorderThickness="1"/>

                <TextBlock Text="Discount %" Foreground="#64748B" FontSize="12"/>
                <TextBox Text="{Binding Discount}" Padding="8"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="CANCEL" Command="{Binding CancelCommand}" Background="Transparent" Foreground="Gray" Margin="0,0,10,0"/>
                <Button Content="SAVE CHANGES" Command="{Binding SaveCommand}" Background="#009688" Foreground="White" Padding="15,8">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>