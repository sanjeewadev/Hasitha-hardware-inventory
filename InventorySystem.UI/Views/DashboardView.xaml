<UserControl x:Class="InventorySystem.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1100">

    <UserControl.Resources>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Store Performance" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Analytics and revenue overview." Foreground="#94A3B8" Margin="0,5,0,0" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Border Background="White" CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,10,0" Padding="10,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📅" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#64748B"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Width="110" BorderThickness="0" VerticalContentAlignment="Center"/>
                        <TextBlock Text=" ➜ " VerticalAlignment="Center" Foreground="#94A3B8" Margin="5,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="110" BorderThickness="0" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Button Command="{Binding RefreshCommand}" 
                        Background="#3B82F6" BorderThickness="0" Padding="15,8" Cursor="Hand" ToolTip="Refresh Data">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="↻" Foreground="White" FontSize="16" Margin="0,0,8,0" FontWeight="Bold"/>
                        <TextBlock Text="Refresh" Foreground="White" FontWeight="Bold" FontSize="13"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,-20,30">
            <Border CornerRadius="12" Margin="0,0,20,0" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#10B981" BlurRadius="15" Opacity="0.25" ShadowDepth="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Period Revenue" Foreground="#D1FAE5" FontSize="13" FontWeight="Medium"/>
                    <TextBlock Text="{Binding PeriodRevenue, StringFormat='Rs {0:N0}'}" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBlock Text="Sales in selected range" Foreground="#A7F3D0" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" Margin="0,0,20,0" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0D9488" Offset="0"/>
                        <GradientStop Color="#0F766E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#0D9488" BlurRadius="15" Opacity="0.25" ShadowDepth="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Gross Profit" Foreground="#CCFBF1" FontSize="13" FontWeight="Medium"/>
                    <TextBlock Text="{Binding PeriodProfit, StringFormat='Rs {0:N0}'}" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBlock Text="Revenue - Cost" Foreground="#99F6E4" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Margin="0,0,20,0" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Transactions" Foreground="#64748B" FontSize="13" FontWeight="SemiBold"/>
                        <Border Background="#EFF6FF" CornerRadius="20" HorizontalAlignment="Right" Padding="8">
                            <TextBlock Text="🧾" FontSize="16"/>
                        </Border>
                    </Grid>
                    <TextBlock Text="{Binding TransactionCount}" Foreground="#1E293B" FontSize="36" FontWeight="Bold" Margin="0,0,0,0"/>
                    <TextBlock Text="Receipts generated" Foreground="#94A3B8" FontSize="11"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="25" BorderBrush="#E2E8F0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Sales Trend (Last 7 Days)" FontSize="16" FontWeight="Bold" Foreground="#1E293B"/>
                    <TextBlock Text="Daily revenue performance" FontSize="12" Foreground="#94A3B8" Margin="0,3,0,0"/>
                </StackPanel>

                <ItemsControl Grid.Row="1" ItemsSource="{Binding WeeklySalesData}" VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Bottom" ToolTip="{Binding Tooltip}" Margin="15,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Width="60" CornerRadius="6,6,0,0" VerticalAlignment="Bottom" Margin="0,0,0,10"
                                        Height="{Binding NormalizedHeight}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                            <GradientStop Color="#3B82F6" Offset="1"/>
                                            <GradientStop Color="#60A5FA" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <TextBlock Grid.Row="1" Text="{Binding DayName}" HorizontalAlignment="Center" 
                                           Foreground="#64748B" FontSize="13" FontWeight="SemiBold"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>