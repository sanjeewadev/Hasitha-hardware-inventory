<UserControl x:Class="InventorySystem.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1100">

    <UserControl.Resources>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <StackPanel>
                <TextBlock Text="Store Performance" FontSize="26" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Analytics and inventory overview." Foreground="#94A3B8" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">

                <Border Background="White" CornerRadius="6" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,10,0" Padding="8,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📅" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Width="105" BorderThickness="0" VerticalContentAlignment="Center"/>
                        <TextBlock Text=" to " VerticalAlignment="Center" Foreground="#94A3B8" Margin="5,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="105" BorderThickness="0" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Button Command="{Binding ClearFilterCommand}" 
                        Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Padding="15,8" Margin="0,0,10,0" Cursor="Hand" ToolTip="Reset Dates to Today">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✖" Foreground="#EF4444" FontSize="12" Margin="0,0,8,0" FontWeight="Bold"/>
                        <TextBlock Text="Clear" Foreground="#64748B" FontWeight="SemiBold"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Command="{Binding RefreshCommand}" 
                        Background="#009688" BorderThickness="0" Padding="15,8" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="↻" Foreground="White" FontSize="14" Margin="0,0,8,0" FontWeight="Bold"/>
                        <TextBlock Text="Refresh" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,-20,30">

            <Border CornerRadius="12" Margin="0,0,20,0" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#10B981" BlurRadius="20" Opacity="0.3" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Period Revenue" Foreground="#D1FAE5" FontSize="13" FontWeight="Medium"/>
                    <TextBlock Text="{Binding PeriodRevenue, StringFormat='Rs {0:N0}'}" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBlock Text="Sales in selected range" Foreground="#A7F3D0" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" Margin="0,0,20,0" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0D9488" Offset="0"/>
                        <GradientStop Color="#0F766E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#0D9488" BlurRadius="20" Opacity="0.3" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Gross Profit" Foreground="#CCFBF1" FontSize="13" FontWeight="Medium"/>
                    <TextBlock Text="{Binding PeriodProfit, StringFormat='Rs {0:N0}'}" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBlock Text="Revenue - Cost" Foreground="#99F6E4" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Margin="0,0,20,0" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Transactions" Foreground="#64748B" FontSize="13" FontWeight="SemiBold"/>
                        <Border Background="#EFF6FF" CornerRadius="20" HorizontalAlignment="Right" Padding="8">
                            <TextBlock Text="🧾" FontSize="14"/>
                        </Border>
                    </Grid>
                    <TextBlock Text="{Binding TransactionCount}" Foreground="#1E293B" FontSize="32" FontWeight="Bold" Margin="0,0,0,0"/>
                    <TextBlock Text="Receipts in range" Foreground="#94A3B8" FontSize="11"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Margin="0,0,20,0" Padding="20" BorderBrush="#FECACA" BorderThickness="1">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Low Stock" Foreground="#EF4444" FontSize="13" FontWeight="SemiBold"/>
                        <Border Background="#FEF2F2" CornerRadius="20" HorizontalAlignment="Right" Padding="8">
                            <TextBlock Text="⚠️" FontSize="14"/>
                        </Border>
                    </Grid>
                    <TextBlock Text="{Binding LowStockCount}" Foreground="#EF4444" FontSize="32" FontWeight="Bold" Margin="0,0,0,0"/>
                    <TextBlock Text="Items need reordering" Foreground="#EF4444" Opacity="0.8" FontSize="11"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="25" Margin="0,0,25,0" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Text="Sales Trend" FontSize="16" FontWeight="Bold" Foreground="#1E293B"/>
                        <TextBlock Text="Performance leading up to End Date" FontSize="12" Foreground="#94A3B8" Margin="0,3,0,0"/>
                    </StackPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding WeeklySalesData}" VerticalAlignment="Bottom" Margin="0,30,0,0" Height="200">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalAlignment="Bottom" ToolTip="{Binding Tooltip}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Width="30" CornerRadius="6,6,0,0" VerticalAlignment="Bottom" Margin="0,0,0,10"
                                            Height="{Binding NormalizedHeight}">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <GradientStop Color="#3B82F6" Offset="1"/>
                                                <GradientStop Color="#60A5FA" Offset="0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <TextBlock Grid.Row="1" Text="{Binding DayName}" HorizontalAlignment="Center" 
                                               Foreground="#64748B" FontSize="11" FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Low Stock Alerts" FontSize="16" FontWeight="Bold" Foreground="#EF4444"/>
                        <TextBlock Text="Items below reorder point" FontSize="12" Foreground="#94A3B8" Margin="0,3,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding LowStockList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FEF2F2" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#7F1D1D" FontSize="13"/>
                                                <TextBlock Text="{Binding Barcode}" Foreground="#B91C1C" FontSize="11" Opacity="0.7"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Left: " FontSize="11" Foreground="#DC2626"/>
                                                    <TextBlock Text="{Binding Quantity}" FontSize="12" FontWeight="Bold" Foreground="#DC2626"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>