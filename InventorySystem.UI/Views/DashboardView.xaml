<UserControl x:Class="InventorySystem.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Dashboard Overview" FontSize="26" FontWeight="Bold" Foreground="#334155" Margin="0,0,0,25"/>

                <UniformGrid Columns="3" Margin="0,0,0,30">
                    <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,20,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.05" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Total Sales Today" Foreground="#64748B" FontSize="14"/>
                                <TextBlock Text="{Binding TodaySales, StringFormat='Rs {0:N0}'}" Foreground="#334155" FontSize="36" FontWeight="Bold" Margin="0,10,0,0"/>
                            </StackPanel>
                            <Border Width="50" Height="50" CornerRadius="25" Background="#E0F2F1" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <Path Data="{StaticResource Icon_Today}" Fill="{StaticResource PrimaryBrush}" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,20,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.05" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Transactions" Foreground="#64748B" FontSize="14"/>
                                <TextBlock Text="{Binding TransactionsToday}" Foreground="#334155" FontSize="36" FontWeight="Bold" Margin="0,10,0,0"/>
                            </StackPanel>
                            <Border Width="50" Height="50" CornerRadius="25" Background="#E0F7FA" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock Text="🧾" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.05" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Low Stock Alerts" Foreground="#64748B" FontSize="14"/>
                                <TextBlock Text="{Binding LowStockItems}" Foreground="#EF4444" FontSize="36" FontWeight="Bold" Margin="0,10,0,0"/>
                            </StackPanel>
                            <Border Width="50" Height="50" CornerRadius="25" Background="#FEE2E2" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock Text="⚠️" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </UniformGrid>

                <Grid Height="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,20,0" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.05"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Revenue Analytics (Monthly)" FontWeight="Bold" Foreground="#334155" FontSize="16"/>
                            <TextBlock Text="Chart Visualization coming soon..." Foreground="#94A3B8" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.05"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Recent Activity" FontWeight="Bold" Foreground="#334155" FontSize="16" Margin="0,0,0,15"/>
                            <TextBlock Text="• Admin logged in" Foreground="#64748B" Margin="0,5"/>
                            <TextBlock Text="• Backup created" Foreground="#64748B" Margin="0,5"/>
                            <TextBlock Text="• Stock Updated" Foreground="#64748B" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>